@using Model.DTO_Model;
@using Model.DTO.DTO_Ad;
@using PagedList.Mvc;
@using UI.Models;
@using Model.Common;
@model PagedList.IPagedList<List<Model.DTO_Model.DTO_Dis_Product>>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Product2.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


<style>
    h4 {
        color:peru
    }
    .old-price {
        margin-top: 10px;
        font-size: 0.8em;
        text-decoration: line-through;
        color: grey;
    }

    .new-price {
        color: #f6eb14;
        font-size: 1.45em;
        line-height: 1.1;
    }


    ins {
        color: green;
        font-size: 32px;
        text-decoration: none;
        padding: 1em 1em 1em .5em;
    }

    .amount {
        position: relative;
    }

        .amount::after {
            content: "";
            width: 100%;
            height: 1px;
            background: black;
            position: absolute;
            bottom: -10px;
            left: 0;
        }
</style>
<body>

    <div class="breadcrumb-wrap">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="~/Product/Index">Danh sách sản phẩm</a></li>
                <li class="breadcrumb-item active">Sản phẩm theo loại</li>
            </ul>
        </div>
    </div>

    <div class="product-view">
        <div class="container-fluid">
           
                @foreach (List<DTO_Dis_Product> item1 in @Model)
                {
                    if (item1.Count() > 0)
                    {
                        <div class="content-heading-anchor">
                            @{                         var itemType = item1.Select(i => i.IdItemType).FirstOrDefault();}
                            <h4 style="font-size:35px" class="title">@item1.Select(s => s.Type_Product).FirstOrDefault() 
                             <a style="font-size:20px" class="read-more-1" href="@Url.Action("Index2", "Product", new { id =itemType }) "> Xem thêm -></a>
                            </h4>

                               
                        </div>
                        <div class="col-lg-12">
                            <div class="row">
                                

                                @{
                                    foreach (DTO_Dis_Product item in item1.Take(5))
                                    {
                                        var price = item.Price_Dis;
                                        var priceOld = item.Price;
                                        DateTime dateTime = DateTime.Today;
                                        var endDay = item.End;
                                        var startDay = item.Start;
                                        bool checkPrice = price < priceOld;

                                        bool totalday = endDay >= dateTime && startDay <= dateTime;

                                        <div class="col-md-2">
                                            <div class="product-item">
                                                <div style="height:102px" class="product-title">
                                                    <span style="color:darkgoldenrod">@Html.DisplayFor(modelItem => item.Name)</span>
                                                    <div class="ratting">
                                                        @for (int i = 0; i < item.Rating; i++)
                                                        {
                                                            <i class="fa fa-star"></i>
                                                        }
                                                        @for (int i = item.Rating; i < 5; i++)
                                                        {
                                                            <i style="color:red" class="fa fa-star-o"></i>

                                                        }
                                                    </div>
                                                    <div style="color:red" class="ratting">
                                                        @{
                                                            if (price != null && totalday == true && checkPrice == true)
                                                            {
                                                                <img style="width:30px;height:20px" src="~/images/sale.jpg" /> @item.Content
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                                <div class="product-image">
                                                    <a href="product-detail.html">
                                                        <img  style="height:200px;width:200px"  src="@Url.Content(item.Photo)" />
                                                    </a>
                                                    <div class="product-action">
                                                        @{
                                                            var session = (UserLogin)HttpContext.Current.Session[Constants.USER_SESSION];
                                                            if (session == null)
                                                            {
                                                                <a class="btn" href=" @Url.Action("Details1", "Product", new { id = item._id })"><i class="fa fa-cart-plus"></i></a>
                                                                <a class="btn" href=" @Url.Action("Details1", "Product", new { id = item._id })"><i class="fa fa-heart"></i></a>
                                                                <a class="btn" href=" @Url.Action("Details1", "Product", new { id = item._id })">
                                                                    <i class="fa fa-search"></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a class="btn" onclick="Buy_Cart('@item._id')"><i class="fa fa-cart-plus"></i></a>
                                                                <a class="btn" onclick="Buy_Favorite('@item._id')"><i class="fa fa-heart"></i></a>
                                                                <a class="btn" href=" @Url.Action("Details1", "Product", new { id = item._id })">
                                                                    <i class="fa fa-search"></i>
                                                                </a>
                                                            }
                                                        }


                                                    </div>
                                                </div>
                                                <div style="height:106px" class="product-price">
                                                    @{

                                                        if (price != null && totalday == true && checkPrice == true)
                                                        {
                                                            <span class="old-price"> @string.Format("{0:0,0}", item.Price) VNĐ </span>
                                                            <br />

                                                            <span class="new-price">@string.Format("{0:0,0}", item.Price_Dis) VNĐ</span>
                                                        }
                                                        else
                                                        {
                                                            string newprice = string.Format("{0:0,0}", item.Price);

                                                            <h3>@newprice<span> VNĐ </span></h3>
                                                        }

                                                    }
                                                    <a onclick="AddCart()" class="btn" href=" @Url.Action("Buy", "Product", new { id = item._id })"><i class="fa fa-shopping-cart"></i>Mua hàng</a>
                                                </div>

                                            </div>
                                        </div>

                                    }
                                }

                            </div>

                        </div>
                    }

                }

            </div>
        </div>
    <script>
        function Buy_Favorite(id) {
            var id_temp = id;
            $.ajax({

                url: '/Cart/Details_',
                data: { Id: id },
                dataType: 'json',
                type: 'POST',
                success: function (res) {
                    for (let i = 0; i < res.buy.length; i++) {
                        if (res.buy[i]["_id"] == id_temp) {
                            alert("Sản phẩm " + res.buy[i]["Name"] + " đã được thêm vào sản phẩm yêu thích");
                            break;
                        }
                    }
                    $("#sttbuy").text(res.buy.length);
                }


            });
        }

        function Buy_Cart(id) {
            var id_temp = id;
            $.ajax({
                url: '/Product/Buy_Favorite',
                data: { Id: id },
                dataType: 'json',
                type: 'POST',
                success: function (res) {
                    if (res.buy == 0) {
                        alert("Sản phầm này đã hết hàng");
                    }
                    console.log("Id is: " + id_temp);
                    console.log(res.buy);
                    for (let i = 0; i < res.buy.length; i++) {

                        if (res.buy[i]["_id"] == id_temp) {
                            alert("Sản phẩm " + res.buy[i]["Name"] + " đã được thêm vào giỏ hàng");
                            break;
                        }
                    }
                    $("#total-product").text(res.buy.length);
                }

            });
        }
    </script>
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <!-- JavaScript Libraries -->
    @*<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>*@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/slick/slick.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>







