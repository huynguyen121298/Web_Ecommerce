
@using Model.DTO.DTO_Ad;
@using PagedList.Mvc;
@model PagedList.IPagedList<Model.DTO.DTO_Ad.DTO_Account2>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Product_.cshtml";
}

<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="eCommerce HTML Template Free Download" name="keywords">
    <meta content="eCommerce HTML Template Free Download" name="description">
    <!-- Favicon -->
    <link href="~/images/favicon.ico" rel="icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">
    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">
    <link href="~/css/style_SP.css" rel="stylesheet">
    <style>

        .old-price {
            margin-top: 10px;
            font-size: 0.8em;
            text-decoration: line-through;
            color: grey;
        }

        .new-price {
            color: #f6eb14;
            font-size: 1.45em;
            line-height: 1.1;
        }


        ins {
            color: green;
            font-size: 32px;
            text-decoration: none;
            padding: 1em 1em 1em .5em;
        }

        .amount {
            position: relative;
        }

            .amount::after {
                content: "";
                width: 100%;
                height: 1px;
                background: black;
                position: absolute;
                bottom: -10px;
                left: 0;
            }
    </style>
</head>

<body>

    <div class="breadcrumb-wrap">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
                <li class="breadcrumb-item active">Danh sách cửa hàng</li>
            </ul>
        </div>
    </div>
    <div class="product-view">
        <div class="container-fluid">
            <div class="row">
                <p>@ViewData["MessQuantity"]</p>
                <div class="col-lg-12">
                    <div class="row">
                        @foreach (DTO_Account2 item in Model)
                        {

                            <div class="col-md-2">
                                <div class="product-item">
                                    <div style="height:102px" class="product-title">
                                        <span style="color:darkgoldenrod">@Html.DisplayFor(modelItem => item.MerchantName)</span>

                                        <div class="ratting">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>

                                    </div>

                                    <div class="product-image">
                                        <a href="product-detail.html">
                                            <img style="height:250px" src="@Url.Content(item.Photo)" />
                                        </a>
                                    </div>
                                    <div style="height:106px" class="product-price">

                                        <a class="btn" href=" @Url.Action("ProductByMerchant", "Merchant", new { merchantId = item._id })"><i class="fa fa-shopping-cart"></i>chọn cửa hàng</a>

                                    </div>

                                </div>
                            </div>
                        }

                    </div>

                </div>

                <!-- Side Bar Start -->
                <div class="col-lg-4 sidebar">

                </div>
                <!-- Side Bar End -->
            </div>
        </div>
    </div>
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    @*<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/js/main.js"></script>
</body>