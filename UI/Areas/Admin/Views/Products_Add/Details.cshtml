@model Model.DTO_Model.DTO_Product_Item_Type

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var colors = Model.Items.Select(s => s.Color).FirstOrDefault();
    var sizes = Model.Items.Select(s => s.Size).FirstOrDefault();}

<link href="~/css/css_color.css" rel="stylesheet" />

<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary" style="text-align:center">Chi tiết sản phẩm</h6>
</div>
<div class="form-content text-body">

    <hr />
    <dl class="dl-horizontal form-content text-body">
        <dt>
            Mã sản phẩm: @Html.DisplayFor(model => model._id)
        </dt>

        <dt>
            Tên sản phẩm:  @Html.DisplayFor(model => model.Name)
        </dt>

        <dt>
            Giá sản phẩm:   @string.Format("{0:0,0}", Model.Price)  VNĐ
        </dt>

        <dt>
            Chi tiết sản phẩm:  @Html.DisplayFor(model => model.Details)
        </dt>



        <dt>
            Hình ảnh<ol>
                @if (Model.Photo != null)
                {
                    <li>
                        <img src="@Url.Content(Model.Photo)" style="height:100px ;width:100px ; margin:10px " />
                    </li>
                }

                @if (Model.Photo2 != null)
                {
                    <li>
                        <img src="@Url.Content(Model.Photo2)" style="height:100px ;width:100px ; margin:10px " />
                    </li>
                }

                @if (Model.Photo3 != null)
                {
                    <li>
                        <img src="@Url.Content(Model.Photo3)" style="height:100px ;width:100px ; margin:10px " />
                    </li>
                }
            </ol>
        </dt>

        @if (Model.Items.Any())
        {
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Màu</th>
                                    <th>Size</th>
                                    <th>Số lượng</th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Màu</th>
                                    <th>Size</th>
                                    <th>Số lượng</th>

                                </tr>
                            </tfoot>
                            <tbody>

                                @foreach (var item1 in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => item1.Color)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item1.Size)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item1.Quantity)
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }
    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model._id }) |
    @Html.ActionLink("Trở về", "Index")
</p>