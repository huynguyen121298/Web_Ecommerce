@model  Model.DTO_Model.DTO_Product_Item_Type

@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.ckeditor.com/4.5.6/standard/ckeditor.js"></script>
<link href="~/css/css_color.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.4.1.js"></script>

@using (Html.BeginForm("Create", "Products_Add", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model._id)

    <div class="form-group">
        Tên sản phẩm
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Giá sản phẩm
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Chi tiết sản phẩm
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Details, new { @id = "ckeditor" })
            @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
        </div>
        <script type="text/javascript">
            $(document).ready(function () {
                CKEDITOR.replace('ckeditor');
                CKEDITOR.config.autoParagraph = false;
                CKEDITOR.config.language = 'vi';
                CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR
                CKEDITOR.config.shiftEnterMode = CKEDITOR.ENTER_BR;
            });
        </script>
    </div>
    <div class="form-group">
        Chọn hình ảnh cho sản phẩm
        <div class="col-md-10">
            <ol>

                <ol>
                    <li>
                        <input type="file" name="ImageUpload" id="ImageUpload" onchange="upAnh(this)" />

                        <img src="" style="height:60px; width:50px; margin:10px; " id="chonAnh" />
                    </li>

                    <li>
                        <input type="file" name="ImageUpload2" id="ImageUpload2" onchange="upAnh2(this)" />

                        <img src="" style="height:50px; width:50px; margin:10px; " id="chonAnh2" />
                    </li>

                    <li>

                        <input type="file" name="ImageUpload3" id="ImageUpload3" onchange="upAnh3(this)" />

                        <img src="" style="height:50px; width:50px; margin:10px; " id="chonAnh3" />
                    </li>
                </ol>
            </ol>

            <p style="color:red">@ViewData["ErrorMessage"]</p>
        </div>
        <script type="text/javascript">
            $(document).ready(function () {

            });
            function upAnh(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#chonAnh").attr("src", e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            function upAnh2(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#chonAnh2").attr("src", e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            function upAnh3(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#chonAnh3").attr("src", e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
        </script>
    </div>
    <div class="form-group">
        Chon loại sản phẩm
        <div class="col-md-10">
            @Html.Action("ListTypeProductAdmin", "Admin")
        </div>
    </div>

    <div class="form-group">
        Chon màu sản phẩm
        <div class="col-md-10">
            <select class="form-control" name="selectColor" multiple>
                <option class="color" style="background-color: green" value="green" data-hex="#e1e851"></option>
                <option class="color" style="background-color: red" value="red" data-hex="#8cd147"></option>
                <option class="color" style="background-color: purple" value="purple" data-hex="#4a9ccf"></option>
                <option class="color" style="background-color: yellow" value="yellow" data-hex="#661f45"></option>
                <option class="color" style="background-color: orangered" value="orangered" data-hex="#1e2024"></option>
            </select>
        </div>
    </div>
   

    <div class="form-group">
        Nhập số lượng
        <div class="col-md-10">
            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control " } })
            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p style="color:red">@ViewData["ErrorMessage2"]</p>
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-primary" type="submit" value="Thêm sản phẩm" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    function getPlainText(strSrc) {
        var resultStr = "";

        // Ignore the <p> tag if it is in very start of the text
        if (strSrc.indexOf('<p>') == 0)
            resultStr = strSrc.substring(3);

        // Replace <p> with two newlines
        resultStr = resultStr.replace(/<p>/gi, "\r\n\r\n");
        // Replace <br /> with one newline
        resultStr = resultStr.replace(/<br \ / > /gi, "\r\n");
        resultStr = resultStr.replace(/<br>/gi, "\r\n");

        //-+-+-+-+-+-+-+-+-+-+-+
        // Strip off other HTML tags.
        //-+-+-+-+-+-+-+-+-+-+-+

        return resultStr.replace(/<[^<|>]+?>/gi, '');
    }

    var str = "<p>first line<br />second line <otherTag>Other Html tag data</otherTag></p><p>third line<br />fourth line</p>";
    $("#myTextArea").val(getPlainText(str));
</script>
@section Upload {
    <script>
        $(function () {
            $('#btnUpload').click(function () {
                $('#fileUpload').trigger('click');
            });
            $('#fileUpload').change(function () {
                if (window.FormData !== undefined) {
                    var fileUpload = $('#fileUpload').get(0);
                    var files = fileUpload.files;
                    var formData = new FormData();
                    formData.append('file', files[0]);
                    $.ajax({
                        type: 'POST',
                        url: '~/Products_Add/ProcessUpload',
                        contentTyle: false,
                        processData: false,
                        data: formData,
                        success: function (urlImage) {
                            $('#pictureUpload').attr('src', urlImage);

                        },
                        error: function (err) {
                            alert('có lỗi khi upload' + err.statusText);
                        }

                    });
                }

            });
        });
    </script>
}