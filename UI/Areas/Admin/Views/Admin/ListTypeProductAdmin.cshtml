@model IEnumerable<Model.DTO.DTO_Ad.DTO_Item_Type>
@using Model.DTO.DTO_Ad;
<select style="width:200px;margin-left:10%" name="typeProduct" id="typeProduct" onchange="ShowOptionSize()">
    @foreach (DTO_Item_Type item in Model)
    {
        <option>@item.Type_Product</option>
    }
</select>
<select name="sizeProduct" id="sizeProduct" style="display:none;width:200px" multiple required>

    <option selected>S</option>
    <option>M</option>
    <option>L</option>
    <option>XL</option>


</select>




<script>
    

    function ShowOptionSize() {
        var valueTypeProduct = $("#typeProduct").val();
        if (valueTypeProduct == "Thời trang nam" || valueTypeProduct == "Thời trang nữ") {
            $("#sizeProduct").show();

        }
        else {
            $("#sizeProduct").hide();
        }
    }
</script>