@model IEnumerable<Model.DTO.DTO_Ad.DTO_Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="text-align:center">Cập nhật thêm cho sản phẩm</h6>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th>Màu sắc</th>
                            <th>Size</th>
                            <th>Số lượng</th>
                            <th>Lựa chọn</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>

                            <th>Màu sắc</th>
                            <th>Size</th>
                            <th>Số lượng</th>
                            <th>Lựa chọn</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Color)
                                </td>
                                @if (item.Size != null)
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Size)
                                    </td>
                                }
                                else
                                {
                                    <td>
                                    </td>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>

                                <td>
                                    <a class="btn btn-outline-warning " href=" @Url.Action("Details", "Item", new { itemId = item._id })">Chỉnh sửa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    }
    else
    {
        <span class="font-weight-bold" style="text-align:center">Chưa có danh mục nào</span>
    }
</div>