@model Model.DTO.DTO_Ad.DTO_Item_Type

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary" style="text-align:center">Tạo danh mục sản phẩm</h6>
</div>

@using (Html.BeginForm("Create", "TypeProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model._id)


        <div class="form-group">
            <label>Tên danh mục</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type_Product, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>