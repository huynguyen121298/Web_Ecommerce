@model IEnumerable<Model.DTO.DTO_Ad.DTO_Item_Type>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";



}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="text-align:center">Danh mục loại sản phẩm</h6>
    </div>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>

                                <th>Loại sản phẩm</th>
                                <th>Trạng thái</th>


                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                                <th>Loại sản phẩm</th>
                                <th>Trạng thái</th>

                            </tr>
                        </tfoot>
                        <tbody>
                            <tr>


                                <td>
                                    @Html.DisplayFor(modelItem => item.Type_Product)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>

                                <td>
                                    <a class="btn btn-success " href=" @Url.Action("Edit", "TypeProduct", new { id = item._id })">Chỉnh sửa</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
    else
    {
        <span class="font-weight-bold" style="text-align:center">Chưa có danh mục nào</span>
    }



</div>




<!-- /.container-fluid -->
