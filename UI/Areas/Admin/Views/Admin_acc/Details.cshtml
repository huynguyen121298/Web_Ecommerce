@model Model.DTO.DTO_Ad.DTO_Account
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{
    var stt = Model.RoleId;
    string quyen;
    if (stt == 1)
    {
        quyen = "Admin";
    }
    else
    {
        quyen = "User";
    }

}


<div>
    @{
        if (stt != 1)
        {
            <h4 style="text-align:center">Tài Khoản doanh nghiệp @Model.MerchantName</h4>

        }
        else
        {
            <h4 style="text-align:center">Tài Khoản admin @Model.FirstName  @Model.LastName</h4>
        }

    }

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        @{
            if (stt == 1)
            {
                <dt>
                    Quyền
                </dt>

                <dd>
                    @quyen
                </dd>
            }
            if (Model.MerchantName != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.MerchantName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MerchantName)
                </dd>
            }
            if (Model.Photo != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Photo)
                </dt>

                <dd>
                    <img src="@Url.Content(Model.Photo)" style="height:200px ;width:200px ; margin:10px " />
                </dd>
            }




        }
    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model._id }) |

    @if (Model.RoleId == 1)
    {
        @Html.ActionLink("Trở về", "Index")
    }
    @if (Model.RoleId == 2)
    {
        @Html.ActionLink("Trở về", "Index", "Admin")
    }

</p>